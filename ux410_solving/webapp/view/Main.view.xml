<mvc:View controllerName="sap.btp.ux410solving.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:svm="sap.ui.comp.smartvariants"
    xmlns:viz="sap.viz.ui5.controls"
    xmlns:viz.data="sap.viz.ui5.data"
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds">
    <f:DynamicPage headerExpanded="{/headerExpanded}">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                     <Title text='VizFrame' />
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader>
                <f:content>
                    <fb:FilterBar id="filterbar" persistencyKey="myPersKey" useToolbar="false" search=".onSearch" filterChange=".onFilterChange" afterVariantLoad=".onAfterVariantLoad">
                        <fb:filterGroupItems>
                            <fb:FilterGroupItem name="OrderID" label="OrderID" groupName="Group1" visibleInFilterBar="true">
                                <fb:control>
                                    <ComboBox
                                        name="OrderID"
                                        selectionChange=".onSelectionChange"
                                        items="{
                                            path: '/Orders'
                                        }"
                                        required="true"
                                        showSecondaryValues= "true"
                                    >
                                        <core:ListItem key="{OrderID}" text="{OrderID}" additionalText="{CustomerID}"/>
                                        <!-- <core:ListItem key="{OrderID}" text="{OrderID}" /> -->
                                    </ComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem name="Category" label="Category" groupName="Group1" visibleInFilterBar="true">
                                <fb:control>
                                    <MultiComboBox
                                        name="Category"
                                        selectionChange=".onSelectionChange"
                                        items="{
                                            path: '/ProductCategories',
                                            templateShareable: true
                                        }"
                                    >
                                        <core:Item key="{key}" text="{name}"/>
                                    </MultiComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem name="SupplierName" label="SupplierName" groupName="Group1" visibleInFilterBar="true">
                                <fb:control>
                                    <MultiComboBox
                                        name="SupplierName"
                                        selectionChange=".onSelectionChange"
                                        items="{
                                            path: '/ProductSuppliers',
                                            templateShareable: true
                                        }"
                                    >
                                        <core:Item key="{key}" text="{name}"/>
                                    </MultiComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>
                        </fb:filterGroupItems>
                    </fb:FilterBar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <!-- vizFrame -->
            <viz:VizFrame vizType="bar"
            legendVisible="true"
             uiConfig="{applicationSet:'fiori'}"
             width="100%"
            >
                <viz:dataset>
                    <viz.data:FlattenedDataset data="{/Order_Details}">
                    <!-- Y 축 -->
                    <viz.data:dimensions>
                        <viz.data:DimensionDefinition name="OrderID" value="{OrderID}" />
                        <viz.data:DimensionDefinition name="ProductID" value="{ProductID}" />
                    </viz.data:dimensions>

                    <!-- X 축 -->
                    <viz.data:measures>
                        <viz.data:MeasureDefinition name="UnitPrice" value="{UnitPrice}" />
                    </viz.data:measures>

                    </viz.data:FlattenedDataset>
                </viz:dataset>
                <viz:feeds>
                     <viz.feeds:FeedItem uid="categoryAxis" values="OrderID" type="Dimension" /> <!-- Y축 -->
                    <viz.feeds:FeedItem uid="categoryAxis" values="ProductID" type="Dimension"/> <!-- Y축 -->
                     <viz.feeds:FeedItem uid="valueAxis" values="UnitPrice" type="Measure" /> <!-- X축 -->
                </viz:feeds>

                <viz:dependents>
                    <viz:Popover id="idPopOver"></viz:Popover>
                </viz:dependents>
            </viz:VizFrame>
            <!-- vizFrame -->
        </f:content>
    </f:DynamicPage>
</mvc:View>
