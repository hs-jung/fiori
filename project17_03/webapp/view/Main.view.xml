<mvc:View controllerName="project1703.controller.Main"
    xmlns:u="sap.ui.unified"
    xmlns:t="sap.ui.table"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true">
    <Page id="page" title="{i18n>title}">
        <content>
        <Panel>
            <FlexBox
                class="sapUiSmallMargin"
                height="150px"
                alignItems="Center"
                justifyContent="Center">
                
                <VBox>
                    <Input id="idInput1" value=""/>
                    <Select id="idSelect" width="100%">
                        <core:Item key="PLUS" text="+" />
                        <core:Item key="MINUS" text="-" />
                        <core:Item key="MULTIPLE" text="*" />
                        <core:Item key="DIVISION" text="/" />
                    </Select>
                    <Input id="idInput2" value="" />
                    <Button id="idBtn" text="계산" type="Emphasized" width="100%" press="calCulator" />
                </VBox>
            </FlexBox>
        </Panel>         
                    <t:Table
                    rows="{main>/history}"
                    selectionMode="MultiToggle"
                    paste="onPaste"
                    ariaLabelledBy="title">
                        <t:extension>
                            <OverflowToolbar style="Clear">
                                <Title id="title" text="Products"/>
                            </OverflowToolbar>
                        </t:extension>
                        <t:columns>
                            <t:Column width="11rem">
                                <Label text="Num1" />
                                <t:template>
                                    <Text text="{main>num1}" wrapping="false" />
                                </t:template>
                            </t:Column>
                            <t:Column width="11rem">
                                <Label text="OP" />
                                <t:template>
                                    <Text text="{main>op}" wrapping="false" />
                                </t:template>
                            </t:Column>
                            <t:Column width="11rem">
                                <Label text="Num2" />
                                <t:template>
                                    <Text text="{main>num2}" wrapping="false" />
                                </t:template>
                            </t:Column>
                            <t:Column width="11rem">
                                <Label text="Result" />
                                <t:template>
                                    <Text text="{main>result}" wrapping="false" />
                                </t:template>
                            </t:Column>
                            
                        </t:columns>
                    </t:Table>
        </content>
    </Page>
</mvc:View>
